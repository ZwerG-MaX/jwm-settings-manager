<?xml version="1.0"?>
<JWM>
<!-- MENUS -->
    <!-- Main Menu -->
    @MENUS_LIST@
    <RootMenu onroot="1"/>
    <!--Places Menu-->
    <Include>$HOME/.config/placesmenu</Include>
    <!-- Mouse Menu-->
    <RootMenu height="16" onroot="23">
        <Program icon="folder-home.svg" label="Home">xdg-open ~/</Program>
        <Program icon="jwm-settings-manager.svg" label="Settings">jwm-settings-manager</Program>
        <Program icon="preferences-desktop-wallpaper.svg" label="Change Desktop Background">jwm-settings-manager --desktop</Program>
    </RootMenu>
    <!--Shudown Menu-->
    <RootMenu height="0" onroot="9">
        <Program icon="preferences-system-session.svg" label="Shutdown Menu">jwm-settings-manager --halt</Program>
        <Program icon="system-restart.svg" label="Restart Computer">bash -c '
gxmessage -buttons "Yes:3,No:4" "Restart?";case $? in 3)echo "Reboot";dbus-send --system --print-reply --dest=org.freedesktop.ConsoleKit /org/freedesktop/ConsoleKit/Manager org.freedesktop.ConsoleKit.Manager.Restart;; 4)echo "Not restarting";; esac'</Program>
        <Restart label="Reload Desktop" icon="system-restart.svg"/>
        <Exit label="Logout" confirm="true" icon="system-logout.svg"/>
    </RootMenu>
<!-- END MENUS -->
<!-- GROUP -->
    @GROUPS@
<!-- PANEL -->
    @OLD_TRAY@
<!-- Panel Style -->
    <TaskListStyle>
        <ActiveForeground>@TASK_ACTIVE_FOREGROUND@</ActiveForeground>
        <ActiveBackground>@TASK_ACTIVE_BACKGROUND@</ActiveBackground>
        <Background>@TASK_BACKGROUND@</Background>
        <Foreground>@TASK_FOREGROUND@</Foreground>
        <Font>@FONT@</Font>
    </TaskListStyle>
    <TrayStyle>
        <Font>@FONT@</Font>
        <Foreground>@TRAY_FOREGROUND@</Foreground>
        <Background>@TRAY_BACKGROUND@</Background>
        <Opacity>@TRAY_OPACITY@</Opacity>
    </TrayStyle>
    <TrayButtonStyle>
	<Font>@FONT@</Font>
        <Foreground>@TRAY_BUTTON_FOREGROUND@</Foreground>
        <Background>@TRAY_BUTTON_BACKGROUND@</Background>
    </TrayButtonStyle>
    <PagerStyle>
        <Outline>@PAGER_OUTLINE@</Outline>
        <Foreground>@PAGER_FOREGROUND@</Foreground>
        <Background>@PAGER_BACKGROUND@</Background>
        <ActiveForeground>@PAGER_ACTIVE_FOREGROUND@</ActiveForeground>
        <ActiveBackground>@PAGER_ACTIVE_BACKGROUND@</ActiveBackground>
    </PagerStyle>
    <MenuStyle>
        <Font>@FONT@</Font>
        <Foreground>@MENU_FOREGROUND@</Foreground>
        <Background>@MENU_BACKGROUND@</Background>
        <ActiveBackground>@MENU_ACTIVE_BACKGROUND@</ActiveBackground>
        <Opacity>@MENU_OPACITY@</Opacity>
    </MenuStyle>
<!-- WINDOW -->
    <WindowStyle>
        <Font>@FONT@</Font>
        <Width>4</Width>
        <Height>20</Height>
        <Active>
            <Text>@WINDOW_ACTIVE_FOREGROUND@</Text>
            <Title>@WINDOW_ACTIVE_BACKGROUND@</Title>
            <Outline>@WINDOW_ACTIVE_OUTLINE@</Outline>
            <Opacity>@WINDOW_ACTIVE_OPACITY@</Opacity>
        </Active>
	<Text>@WINDOW_FOREGROUND@</Text>
	<Title>@WINDOW_BACKGROUND@</Title>
	<Outline>@WINDOW_OUTLINE@</Outline>
	<Opacity>@WINDOW_OPACITY@</Opacity>
    </WindowStyle>
    <FocusModel>click</FocusModel>
    <SnapMode distance="10">border</SnapMode>
    <MoveMode>opaque</MoveMode>
    <ResizeMode>opaque</ResizeMode>
<!-- KEYSHORTCUTS -->
    @KEYSHORTCUTS@
<!-- MOUSE -->
    @MOUSE@
<!-- ICONS -->
    @ICONS_LIST@
<!-- DESKTOP -->
    <Desktops width="2" height="1">
        <Background type="image">@BG@</Background>
    </Desktops>
<!-- AUTOSTART -->
   @STARTUP@
<!--POP UP -->
    <PopupStyle>
        <Font>@FONT@</Font>
        <Outline>@POPUP_OUTLINE@</Outline>
        <Foreground>@POPUP_FOREGROUND@</Foreground>
        <Background>@POPUP_BACKGROUND@</Background>
    </PopupStyle>
</JWM>
